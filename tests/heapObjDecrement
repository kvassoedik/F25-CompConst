type SimpleRecord is record var num: integer end
type NestedArray is array[2] SimpleRecord

var x: SimpleRecord

routine func(x: integer) is
    var rec: SimpleRecord
    rec.num := 35

    if x = 2 then
        var r2: SimpleRecord
        r2.num := 27
        
        print r2.num
        return
    end

    print rec.num
end

routine main() is
    func(2) // 27
    func(1) // 35
end